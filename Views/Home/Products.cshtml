@{
    ViewData["Title"] = "Products Page";
}

@model Product

<div class="text-center">
    <div class="jumbotron">
        <h1 class="display-4">Products</h1>
        <hr>
        <div class="container">
            <div class="row">
                <div class="col-5 mx-auto">
                    <div class="card border-success mx-auto" style="max-width: 18rem;">
                        <div class="text-center">
                            <div class="card-header text-success bg-dark">
                                <h3>New Product</h3>
                            </div>
                        </div>
                        <div class="card-body bg-secondary">
                            <form asp-action="ProductsCreate" asp-controller="Home" method="post">
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group mb-0">
                                            <label asp-for="Name">Name</label>
                                            <input type="text" asp-for="Name" class="form-control">
                                        </div>
                                        <div class="col-10 text-danger bg-dark">
                                            <span asp-validation-for="Name"></span>
                                        </div>
                                        <div class="form-group mt-3 mb-0">
                                            <label asp-for="Description">Description</label>
                                            <input type="text" asp-for="Description" class="form-control">
                                        </div>
                                        <div class="col-10 text-danger bg-dark">
                                            <span asp-validation-for="Description"></span>
                                        </div>
                                        <div class="form-group mt-3 mb-0">
                                            <label asp-for="Price">Price</label>
                                            <input type="decimal" asp-for="Price" class="form-control">
                                        </div>
                                        <div class="col-10 text-danger bg-dark">
                                            <span asp-validation-for="Price"></span>
                                        </div>
                                        <button type="submit" class="btn btn-outline-success border-success bg-dark mt-3">Create</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-5 mx-auto">
                    <div class="card border-success mx-auto" style="max-width: 18rem;">
                        <div class="text-center">
                            <div class="card-header text-success bg-dark">
                                <h3>Existing Products</h3>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                @foreach (var p in ViewBag.AllProducts)
                                {
                                    <a href="/product/@p.ProductId" class="list-group-item list-group-item-action border-success">@p.Name</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>